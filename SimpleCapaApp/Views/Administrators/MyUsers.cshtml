@model IEnumerable<SimpleCapaApp.Models.User>

<h1>My Users</h1>
<table class="dl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Add new task", "Create", "Tasks", new { id = item.Id }, null) |
            @Html.ActionLink("Edit User", "Edit", "Users", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", "Users",new { id=item.Id }, null) |
            @Html.ActionLink("Delete User", "Delete", "Users", new { id = item.Id }, null)|

        </td>
    </tr>
}

</table>
